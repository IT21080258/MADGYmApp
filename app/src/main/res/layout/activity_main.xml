<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="421dp"
        android:layout_height="154dp"
        android:background="@color/Gold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="158dp"
            android:layout_height="101dp"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/Trainers01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activities"
            android:textColor="@color/Blue_001"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:layout_editor_absoluteX="156dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/Duration1"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Duration"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/Btime1"
        tools:layout_editor_absoluteX="51dp" />

    <TextView
        android:id="@+id/Bdate1"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:text="Booking Date"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        tools:layout_editor_absoluteX="115dp" />


    <EditText
        android:id="@+id/BBDate1"
        android:layout_width="307dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/Bdate1"
        tools:layout_editor_absoluteX="51dp" />

    <Button
        android:id="@+id/Back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@+id/Duration1"
        tools:layout_editor_absoluteX="48dp" />

    <Button
        android:id="@+id/Book2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="48dp"
        android:text="Book"
        app:layout_constraintStart_toEndOf="@+id/Back1"
        app:layout_constraintTop_toBottomOf="@+id/Duration1" />

    <EditText
        android:id="@+id/Btime1"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Booking Time"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/BBDate1"
        tools:layout_editor_absoluteX="51dp" />


</androidx.constraintlayout.widget.ConstraintLayout>